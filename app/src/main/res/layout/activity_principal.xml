<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Principal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdis"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textColor="#4CAF50"
            android:textSize="24sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/utiles"
            android:onClick="utiles"
            app:srcCompat="@mipmap/utiles_foreground" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/centros"
            android:onClick="centros"
            app:srcCompat="@mipmap/centros_foreground" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/acercade"
        android:onClick="acercade"
        app:srcCompat="@mipmap/acercade_foreground" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/tv7"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </LinearLayout>


</LinearLayout>